<UserControl x:Class="PetStore_EF.View.UserControls.UC_Menu_Product"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PetStore_EF.View.UserControls"
             mc:Ignorable="d"
             
             xmlns:uc="clr-namespace:PetStore_EF.View.UserControls.Menu">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="#373737" Margin="0 0 1 0">
            <uc:UC_Product/>
        </Grid>
        <Border Grid.Column="1" Background="#373737" BorderThickness="0" CornerRadius="0 0 8 0">
            <uc:UC_Bill/>
        </Border>
    </Grid>
</UserControl>
